public Boolean companionPlants(String plant1, String plant2) {
    Map<String, List<String>> companionMap = new Map<String, List<String>>{
        'onions' => ['lettuce', 'carrots', 'tomatoes'],
        'lettuce' => ['cucumbers', 'onions']
    }
    return (companionMap.get(plant1).contains(plant2) || companionMap.get(plant2).contains(plant1));
}